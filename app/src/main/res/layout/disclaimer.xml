<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_shape"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="Disclaimer"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/black"
        android:layout_below="@id/title"
        android:alpha=".5"
        />

    <TextView
        android:id="@+id/textviewDisclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/_5sdp"
        android:justificationMode="inter_word"
        android:text="The graphics used in this app is may gathered from different resources. It belongs to their respective owners. If there is any query/issue please contacts us at questappx@gmail.com"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/dialogBtnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewDisclaimer"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:backgroundTint="@color/mainAppColor"
        android:text="Ok"
        android:textColor="@color/white" />

</RelativeLayout>